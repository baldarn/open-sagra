<%= turbo_frame_tag order_dish do %>
  <div class="card">
    <div class="card-body">
      <div class="row align-items-center text-center">
        <div class="col">
          <%= "#{order_dish.dish.name} - #{number_to_currency(order_dish.dish.price.to_f / 100)}" %>
        </div>
        <div class="col">
          Quantity: <%= order_dish.quantity %>
        </div>
        <% if order_dish.notes.present? %>
          <div class="col">
            Notes: <%= order_dish.notes %>
          </div>
        <% end %>
        <div class="col">
          <%= link_to edit_order_order_dish_path(@order, order_dish) do %>
            <%= icon_svg("edit", class: "icon icon-2x") %>
          <% end %>
          <%= link_to order_order_dish_path(@order, order_dish), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %>
            <%= icon_svg("destroy", class: "icon icon-2x") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>