<%= simple_form_for dish do |f| %>
  <%= f.input :name %>
  <%= f.input :price %>
  <%= f.input :course do %>
    <%= 
      f.select(
        :course, 
        Dish.courses.map { |course, v| [Dish.human_attribute_name("course.#{course}"), course] },
        { prompt: 'Select dish' }, 
        class: 'form-control'
      )
    %>
  <% end %>
  <%= f.button :submit %>
<% end %>
